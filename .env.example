VOICE=aura-2-thalia-en

# Database
DATABASE_URL=sqlite:///./calls.db

# Audio Processing Settings
BUFFER_SIZE=3200
SILENCE_THRESHOLD=200

# Business Configuration
BUSINESS_NAME=Your Business Name